<Window x:Class="Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ViewModels"
        Title="EasySave"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        AllowsTransparency="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="#2E2E2E"
                Padding="10"
                BorderBrush="#444"
                BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Grid.Row="0">
                    <TextBlock Text="EasySave"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="10"
                               HorizontalAlignment="Center"/>

                    <Button Content="Ajouter une sauvegarde"
                            Command="{Binding LancerSauvegardeCommand}"
                            Background="#4A90E2"
                            Foreground="White"
                            Height="40"
                            Margin="5"/>
                    <Button Content="Supprimer une sauvegarde"
                            Command="{Binding DeleteSauvegardeCommand}"
                            Background="#4A90E2"
                            Foreground="White"
                            Height="40"
                            Margin="5"/>
                    <Button Content="Exécuter une sauvegarde"
                            Command="{Binding ExecuterSauvegardeCommand}"
                            Background="#4A90E2"
                            Foreground="White"
                            Height="40"
                            Margin="5"/>
                    <Button Content="Restaurer une sauvegarde"
                            Command="{Binding RestoreCommand}"
                            Background="#4A90E2"
                            Foreground="White"
                            Height="40"
                            Margin="5"/>
                    <Button Content="Voir les journaux"
                            Command="{Binding ViewLogsCommand}"
                            Background="#4A90E2"
                            Foreground="White"
                            Height="40"
                            Margin="5"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            Grid.Row="2">
                    <Button Content="Paramètres"
                            Command="{Binding OuvrirParametresCommand}"
                            Background="#4A90E2"
                            Foreground="White"
                            Height="40"
                            Margin="5"/>
                    <Button Content="Changer le format des journaux (XML/JSON)"
                            Command="{Binding ChangeLogFormatCommand}"
                            Background="#4A90E2"
                            Foreground="White"
                            Height="40"
                            Margin="5"/>
                    <Button Content="EN/FR"
                            Command="{Binding ChangeLanguageCommand}"
                            Background="#4A90E2"
                            Foreground="White"
                            Height="40"
                            Margin="5"/>
                    <Button Content="Quitter"
                            Click="QuitterApplication"
                            Background="#D9534F"
                            Foreground="White"
                            Height="40"
                            Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1"
                Padding="20"
                BorderBrush="#444"
                BorderThickness="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#4A90E2" Offset="0"/>
                    <GradientStop Color="#1E1E1E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel>
                <TextBlock Text="Créer une nouvelle sauvegarde"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0 0 0 10"/>

                <TextBlock Text="Nom de la sauvegarde :"
                           FontSize="14"
                           Foreground="White"
                           Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,2,0,0">
                    <TextBox Width="250"
                             Text="{Binding NomSauvegarde}" />
                </StackPanel>

                <TextBlock Text="Dossier source :"
                           FontSize="14"
                           Foreground="White"
                           Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,2,0,0">
                    <TextBox Width="250"
                             Text="{Binding CheminSauvegardeSource, Mode=TwoWay}" />
                    <Button Content="..."
                            Width="30"
                            Command="{Binding SelectionnerDossierCommand}" />
                </StackPanel>


                <TextBlock Text="Dossier cible :"
                           FontSize="14"
                           Foreground="White"
                           Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal"
                            Margin="0,2,0,0">
                    <TextBox Width="250"
                             Text="{Binding CheminSauvegardeCible, Mode=TwoWay}" />
                    <Button Content="..."
                            Width="30"
                            Command="{Binding SelectionnerDossierCibleCommand}" />
                </StackPanel>

                <TextBlock Text="Crypter fichiers :"
                           FontSize="14"
                           Foreground="White"
                           Margin="10 10 0 0"/>
                <StackPanel Orientation="Horizontal"
                            Margin="0,10,0,0">
                    <RadioButton Content="Oui"
                                 IsChecked="{Binding CrypterFichiers, Mode=TwoWay}"
                                 GroupName="CrypterOption"
                                 Foreground="White"
                                 Margin="5,0"/>
                    <RadioButton Content="Non"
                                 IsChecked="{Binding NePasCrypterFichiers, Mode=TwoWay}"
                                 GroupName="CrypterOption"
                                 Foreground="White"
                                 Margin="5,0"/>
                </StackPanel>


                <TextBlock Text="Type de sauvegarde :"
                           FontSize="14"
                           Foreground="White"
                           Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal"
                            Margin="0,2,0,0">
                    <ComboBox ItemsSource="{Binding TypesSauvegarde}"
                                                      SelectedItem="{Binding TypeSauvegarde, Mode=TwoWay}"
                                                      Width="150"
                                                      Margin="0,2,0,0"/>
                </StackPanel>





                <TextBlock Text="Liste des sauvegardes :"
                           FontSize="14"
                           Foreground="White"
                           Margin="10,10,0,0"/>
                <ListBox ItemsSource="{Binding ListeSauvegardes}"
                         SelectedItem="{Binding SelectBackup}"
                         Height="100"
                         Margin="0,2,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Name}"
                                           Foreground="Black"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Source}"
                                           Foreground="Black"/>
                                <TextBlock Text="{Binding Target}"
                                           Foreground="Black"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Content="Actualiser la liste"
                        Command="{Binding ListerSauvegardesCommand}"
                        Background="#4A90E2"
                        Foreground="White"
                        Height="40"
                        Margin="5"/>

                <TextBlock Text="Journaux :"
                           FontSize="14"
                           Foreground="White"
                           Margin="10,10,0,0"/>
                <ListBox Height="200"
                         Margin="0,2,0,0">
                    <ListBoxItem>
                        <TextBlock Text="2025-02-20" Foreground="White"/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="2025-02-19" Foreground="White"/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="2025-02-14" Foreground="White"/>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>