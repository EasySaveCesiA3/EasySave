<Window x:Class="EasySaveApp.SelectionLangueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choisir une langue" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#2E2E2E"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="#3A3A3A" CornerRadius="10" Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Sélectionnez votre langue" Foreground="White" FontSize="16"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Bouton Français -->
                <Button Click="SelectionnerFrancais_Click" Width="150" Height="50" Background="Transparent" Margin="5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Images/France_GL.png" Width="30" Height="20" Margin="5"/>
                        <TextBlock Text="Français" Foreground="White" VerticalAlignment="Center" FontSize="14" />
                    </StackPanel>
                </Button>

                <!-- Bouton Anglais -->
                <Button Click="SelectionnerAnglais_Click" Width="150" Height="50" Background="Transparent" Margin="5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Images/Anglais_GL.png" Width="30" Height="20" Margin="5"/>
                        <TextBlock Text="English" Foreground="White" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
